<UserControl x:Class="TransparentPixelsRemover.uielements.labeledImageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TransparentPixelsRemover.uielements"
             mc:Ignorable="d" 
              Height="180" Width="150">
    <!--{Binding ContainerTitle, RelativeSource={RelativeSource AncestorType=UserControl}}-->
    <Grid>
        <StackPanel>
            <Label Background="{DynamicResource ImageBoxGridTitleBackground}" x:Name="mainLabel" Height="26" VerticalContentAlignment="Center" FontFamily="Arial Rounded MT Bold" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource ImageBoxGridTitleForeground}"/>
            <Grid x:Name="imageGrid" Width="150" Height="150" Margin="0,5,0,0" Background="{DynamicResource ColorFillImageBoxGrid}"></Grid>
        </StackPanel>
    </Grid> 
</UserControl>
